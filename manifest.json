{
  "name": "NewSpeak",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "NewSpeak is a web browser extension to reveal newspeak and optionally restore oldspeak.",
  "homepage_url": "https://github.com/azpat/NewSpeak",  
  "default_locale": "en",
  "permissions": [
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
		"https://*/*"
		],
      "js": ["inject.js"],
	  "run_at" : "document_idle",
      "all_frames" : false
    }
  ]
}
